subjectAltName = @alt_names
basicConstraints = CA:FALSE
keyUsage = {{ ar_tls_ca_keyusage | d('nonRepudiation, digitalSignature, keyEncipherment') }}

[ alt_names ]
{% for alt_name in ar_tls_ca_item.altnames %}
DNS.{{ loop.index }} = {{ alt_name }}
{% endfor %}
{% for ip_addr in ar_tls_ca_item.ipaddrs %}
IP.{{ loop.index }} = {{ ip_addr }}
{% endfor %}
